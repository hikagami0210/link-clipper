{
  "manifest_version": 3,
  "name": "link-clipper",
  "version": "1.0",
  "description": "選択したテキストをリンク形式でコピーできます",
  "permissions": ["contextMenus", "activeTab", "clipboardWrite", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
